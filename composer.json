{
    "name": "mileschou/toggle-simplify",
    "license": "MIT",
    "description": "The simplify feature toggle library for PHP",
    "keywords": [
        "feature",
        "toggle"
    ],
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "ext-json": "*"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.1",
        "phpbench/phpbench": "^0.10.0",
        "phpunit/phpunit": ">=4.8 <6",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\Toggle\\Simplify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "5.5"
        }
    }
}
