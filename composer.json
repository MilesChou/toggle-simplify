{
    "name": "mileschou/toggle-simplify",
    "license": "MIT",
    "description": "The simplify feature toggle library for PHP",
    "keywords": [
        "feature",
        "toggle"
    ],
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1 | ^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1 | ^8",
        "squizlabs/php_codesniffer": "^3.5.7"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\Toggle\\Simplify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
